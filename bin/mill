#!/usr/bin/env ruby

require 'mill'

begin
  site = Mill::Site.load
  case (command = ARGV.shift)
  when nil, 'make'
    site.make
  when 'clean'
    site.clean
  when 'check'
    site.check
  when 'list'
    site.list
  when 'diff'
    site.diff
  when 'snapshot'
    site.snapshot
  when 'upload'
    site.upload
  when 'show'
    puts site.send(ARGV.shift)
  else
    raise "Unknown command: #{command.inspect}"
  end
rescue Mill::Error => e
  warn e
  exit(1)
end