#!/usr/bin/env ruby

require 'mill'

load Path.pwd / 'code' / 'site.rb'

begin
  case (command = ARGV.shift)
  when nil, 'make'
    $site.make
  when 'clean'
    $site.clean
  when 'check'
    $site.check
  when 'list'
    $site.list
  when 'output-dir'
    puts $site.output_dir
  else
    raise "Unknown command: #{command.inspect}"
  end
rescue Mill::Error => e
  warn e
  exit(1)
end